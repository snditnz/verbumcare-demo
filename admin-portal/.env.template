# VerbumCare Admin Portal Configuration
# Copy this to .env and configure for your environment

# Backend API URL
# Options:
# 1. Local development: http://localhost:3000/api
# 2. mDNS hostname: http://other-mbp.local:3000/api
# 3. Tailscale: http://100.x.x.x:3000/api
# 4. Static IP: http://192.168.0.xxx:3000/api
VITE_API_URL=http://localhost:3000/api

# WebSocket URL (for real-time updates)
VITE_WS_URL=http://localhost:3000

# Default language (ja, en, zh-TW)
VITE_DEFAULT_LANGUAGE=ja

# Demo mode (shows demo data banner)
VITE_DEMO_MODE=true